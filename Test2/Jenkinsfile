pipeline{
    agent any
    stages {
        stage ('Cleanup') {
            steps {
                deleteDir()
            }            
        }
        stage ('Clone Repo'){
            steps {
                sh "git clone https://github.com/jjinnm4real/testRepo_v1.3.git"
                    
            }
        }
        
        stage ('Build') {
            steps {
                dir('testRepo_v1.3/Test2') {
                    sh "python.exe is_even.py 3 1"
                }    
                 
            }        
        }
        
    }
    post {
        always {
            dir('testRepo_v1.3/Test2') {
                
                sh "pwd"
                cucumber '**/*.json'
            }    
            
        }    
    }     
    
}   
